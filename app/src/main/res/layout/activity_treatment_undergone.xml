<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <android.support.v4.widget.DrawerLayout
        android:id="@+id/TreatmentUndergone_drawerlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.vayamtech.healthe_cord.Activity.TreatmentUndergoneActivity">

    <android.support.design.widget.NavigationView
        android:id="@+id/TreatmentUndergone_navigation"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/activity_main2_drawer"
        android:layout_gravity="start"
        app:headerLayout="@layout/navigation_header"
        >

    </android.support.design.widget.NavigationView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorwhite"
            >

            <LinearLayout
                android:id="@+id/TreatmentUndergone_header_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@drawable/drug_allergy_banner"  />
            </LinearLayout>
            <FrameLayout
                android:id="@+id/fragment_TreatmentUndergone_container"
                android:layout_width="match_parent"
                android:layout_below="@id/TreatmentUndergone_header_img"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

            </FrameLayout>

        </RelativeLayout>
    </android.support.v4.widget.DrawerLayout>
</layout>


