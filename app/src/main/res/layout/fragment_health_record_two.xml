<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.vayamtech.healthe_cord.Fragment.HealthRecord_twoFragment">

    <!-- TODO: Update blank fragment layout -->

    <!--Fields Start-->

    <LinearLayout
        android:id="@+id/sl_medicalConsulationPurpose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/size_10"
        android:layout_marginTop="@dimen/size_20"
        android:layout_marginRight="@dimen/size_10">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_25"
            android:layout_marginBottom="@dimen/size_3"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/size_20"
                android:fontFamily="@font/robotoregular"
                android:layout_gravity="center"
                android:text="Purpose of Medical Consulation"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_10"
            android:layout_marginRight="@dimen/size_10"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rounded_reg_edittext"
                >
                <EditText
                    android:id="@+id/txtmedicalConsulationPurpose"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:textColor="@color/colorBlack"
                    android:inputType="text"
                    android:paddingBottom="@dimen/_2sdp"
                    android:paddingLeft="@dimen/_5sdp"
                    ></EditText>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!--Fields End-->


    <!-- Fields Start -->

    <LinearLayout
        android:id="@+id/sl_treatmentRelatedto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/sl_medicalConsulationPurpose"
        android:layout_marginLeft="@dimen/size_10"
        android:layout_marginTop="@dimen/size_10"
        android:layout_marginRight="@dimen/size_10">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_25"
            android:layout_marginBottom="@dimen/size_3"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/txttreatmentRelatedto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/size_20"
                android:layout_gravity="center"
                android:text="Name of vaccine"

                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_10"
            android:layout_marginRight="@dimen/size_10"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_38sdp"
                android:layout_weight="1"
                >
                <Spinner
                    android:id="@+id/spinner_treatmentRelatedto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:entries="@array/foodHabit_arrays"
                    android:paddingTop="@dimen/_8sdp"
                    android:paddingLeft="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_8sdp"
                    android:background="@mipmap/custom_dropdown"
                    ></Spinner>

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

    <!-- Fields End -->

    <!--Fields Start-->

    <LinearLayout
        android:id="@+id/sl_healthRecord_diseaseName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/sl_treatmentRelatedto"
        android:layout_marginLeft="@dimen/size_10"
        android:layout_marginTop="@dimen/size_20"
        android:layout_marginRight="@dimen/size_10">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_25"
            android:layout_marginBottom="@dimen/size_3"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/size_20"
                android:fontFamily="@font/robotoregular"
                android:layout_gravity="center"
                android:text="Name of the Disease"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_10"
            android:layout_marginRight="@dimen/size_10"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rounded_reg_edittext"
                >
                <EditText
                    android:id="@+id/txthealthRecord_diseaseName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:textColor="@color/colorBlack"
                    android:inputType="text"
                    android:paddingBottom="@dimen/_2sdp"
                    android:paddingLeft="@dimen/_5sdp"
                    ></EditText>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!--Fields End-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        android:background="@color/colorwhite"
        android:layout_below="@id/sl_healthRecord_diseaseName"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_gravity="center"
        android:gravity="center"
        >

        <Button
            android:id="@+id/btnhealthRecordSubmit"
            android:layout_width="@dimen/_95sdp"
            android:layout_height="@dimen/_45sdp"
            android:background="@drawable/regsubmit" />
    </LinearLayout>


</RelativeLayout>
