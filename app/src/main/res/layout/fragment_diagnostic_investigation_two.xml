<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.vayamtech.healthe_cord.Fragment.DiagnosticInvestigation_twoFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:id="@+id/ll_DiagnosticInvestigation_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/colorwhite"
            >

            <!-- Fields Start -->

            <LinearLayout
                android:id="@+id/sl_DiagnosticInvestigationName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/size_10"
                android:layout_marginTop="@dimen/size_20"
                android:layout_marginRight="@dimen/size_10">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_25"
                    android:layout_marginBottom="@dimen/size_3"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/size_20"
                        android:fontFamily="@font/robotoregular"
                        android:layout_gravity="center"
                        android:text="Diagnostic Investigation Name"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_10"
                    android:layout_marginRight="@dimen/size_10"
                    android:orientation="horizontal"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_reg_edittext"
                        >
                        <EditText
                            android:id="@+id/txtDiagnosticInvestigationName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableRight="@drawable/icon_create"
                            android:background="@android:color/transparent"
                            android:textColor="@color/colorBlack"
                            android:inputType="text"
                            android:paddingLeft="@dimen/_5sdp"
                            ></EditText>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <!-- Fields End -->

            <!-- Fields Start -->
            <LinearLayout
                android:id="@+id/ll_LabReportDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@id/sl_DiagnosticInvestigationName"
                android:layout_marginLeft="@dimen/size_10"
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_marginRight="@dimen/size_10">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_25"
                    android:layout_marginBottom="@dimen/size_3"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/size_20"
                        android:text="Date" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="@dimen/_140sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_10"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:background="@drawable/rounded_reg_edittext"
                    >
                    <EditText
                        android:id="@+id/et_DiagnosticInvestigationDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableRight="@drawable/icon_calendar"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:paddingLeft="@dimen/_5sdp"
                        android:textColor="@color/colorBlack"
                        android:focusable="false"
                        android:background="@android:color/transparent"/>

                </RelativeLayout>

            </LinearLayout>

            <!-- Fields End -->

            <!-- Fields Start -->

            <LinearLayout
                android:id="@+id/sl_DiagnosticInvestigationDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/size_10"
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_marginRight="@dimen/size_10">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_25"
                    android:layout_marginBottom="@dimen/size_3"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/size_20"
                        android:fontFamily="@font/robotoregular"
                        android:layout_gravity="center"
                        android:text="Description"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_10"
                    android:layout_marginRight="@dimen/size_10"
                    android:orientation="horizontal"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_reg_edittext"
                        >
                        <EditText
                            android:id="@+id/txtDiagnosticInvestigationDescription"
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:drawableRight="@drawable/icon_create"
                            android:inputType="textMultiLine"
                            android:gravity="top"
                            android:textColor="@color/colorBlack"
                            android:background="@android:color/transparent"
                            ></EditText>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <!-- Fields End -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_20"
                android:layout_marginRight="@dimen/size_10"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_15sdp"
                >


                <EditText
                    android:id="@+id/etuploadFile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/rounded_reg_edittext"
                    android:textColorHint="@color/colorBlack"
                    android:textColor="@color/colorwhite"
                    android:inputType="textEmailAddress"
                    android:padding="@dimen/_10sdp"
                    android:hint="Upload document..."
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_weight="1"
                    />

                <Button
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_36sdp"
                    android:text="Select"
                    android:textAllCaps="false"
                    android:textSize="@dimen/_12ssp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:textColor="@color/colorwhite"
                    android:gravity="center"
                    android:background="@drawable/btn_back"
                    android:padding="@dimen/_5sdp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@color/colorwhite"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_gravity="center"
                android:gravity="center"
                >

                <Button
                    android:id="@+id/btnDiagnosticInvestigationSubmit"
                    android:layout_width="@dimen/_95sdp"
                    android:layout_height="@dimen/_45sdp"
                    android:background="@drawable/regsubmit" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</FrameLayout>
