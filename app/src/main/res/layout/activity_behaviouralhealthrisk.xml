<?xml version="1.0" encoding="utf-8"?>

<layout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>
        <variable
            name="buttonHandler"
            type="com.vayamtech.healthe_cord.Handler.ButtonHandler">

        </variable>

    </data>
    <android.support.v4.widget.DrawerLayout
        android:id="@+id/bhr_drawerlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.vayamtech.healthe_cord.Activity.BehaviouralhealthriskActivity"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorwhite"
            >

            <LinearLayout
                android:id="@+id/behavioural_hr_header_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@drawable/behavioural_hr_banner"  />
            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/behavioural_hr_header_img">

                <LinearLayout
                    android:id="@+id/ll_main"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/colorwhite"
                    >

                    <!-- Fields Start -->

                    <LinearLayout
                        android:id="@+id/sl_physicalActivity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_below="@id/ll_main"
                        android:layout_marginLeft="@dimen/size_10"
                        android:layout_marginTop="@dimen/size_10"
                        android:layout_marginRight="@dimen/size_10">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/size_25"
                            android:layout_marginBottom="@dimen/size_3"
                            android:orientation="horizontal"
                            >

                            <TextView
                                android:id="@+id/txtphysicalActivity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="@dimen/size_20"
                                android:layout_gravity="center"
                                android:text="Your Physical Activity Level"

                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/size_10"
                            android:layout_marginRight="@dimen/size_10"
                            android:orientation="horizontal"
                            >
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_38sdp"
                                android:layout_weight="1"
                                >
                                <Spinner
                                    android:id="@+id/spinner_physicalActivity"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:entries="@array/foodHabit_arrays"
                                    android:paddingTop="@dimen/_8sdp"
                                    android:paddingLeft="@dimen/_5sdp"
                                    android:paddingBottom="@dimen/_8sdp"
                                    android:background="@mipmap/custom_dropdown"
                                    ></Spinner>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="@dimen/_38sdp"
                                android:layout_height="@dimen/_38sdp"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_weight="0"

                                >
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@mipmap/behavioural_hr1"
                                    android:layout_gravity="right"
                                    />

                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Fields End -->

                    <!-- Fields Start -->

                    <LinearLayout
                        android:id="@+id/sl_consumptionAlcohol"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_below="@id/sl_physicalActivity"
                        android:layout_marginLeft="@dimen/size_10"
                        android:layout_marginTop="@dimen/size_20"
                        android:layout_marginRight="@dimen/size_10">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/size_25"
                            android:layout_marginBottom="@dimen/size_3"
                            android:orientation="horizontal"
                            >

                            <TextView
                                android:id="@+id/txtconsumptionAlcohol"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="@dimen/size_20"
                                android:layout_gravity="center"
                                android:text="Consumption of Alcohol"

                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/size_10"
                            android:layout_marginRight="@dimen/size_10"
                            android:orientation="horizontal"
                            >
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_38sdp"
                                android:layout_weight="1"
                                >
                                <Spinner
                                    android:id="@+id/spinner_consumptionAlcohol"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:entries="@array/foodHabit_arrays"
                                    android:paddingTop="@dimen/_8sdp"
                                    android:paddingLeft="@dimen/_5sdp"
                                    android:paddingBottom="@dimen/_8sdp"
                                    android:background="@mipmap/custom_dropdown"
                                    ></Spinner>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="@dimen/_38sdp"
                                android:layout_height="@dimen/_38sdp"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_weight="0"

                                >
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@mipmap/behavioural_hr2"
                                    android:layout_gravity="right"
                                    />

                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Fields End -->


                    <!-- Fields Start -->

                    <LinearLayout
                        android:id="@+id/sl_smoke"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_below="@id/sl_consumptionAlcohol"
                        android:layout_marginLeft="@dimen/size_10"
                        android:layout_marginTop="@dimen/size_20"
                        android:layout_marginRight="@dimen/size_10">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/size_25"
                            android:layout_marginBottom="@dimen/size_3"
                            android:orientation="horizontal"
                            >

                            <TextView
                                android:id="@+id/txtsmoke"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="@dimen/size_20"
                                android:layout_gravity="center"
                                android:text="Do you smoke?"

                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/size_10"
                            android:layout_marginRight="@dimen/size_10"
                            android:orientation="horizontal"
                            >
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_38sdp"
                                android:layout_weight="1"
                                >
                                <Spinner
                                    android:id="@+id/spinner_smoke"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:entries="@array/foodHabit_arrays"
                                    android:paddingTop="@dimen/_8sdp"
                                    android:paddingLeft="@dimen/_5sdp"
                                    android:paddingBottom="@dimen/_8sdp"
                                    android:background="@mipmap/custom_dropdown"
                                    ></Spinner>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="@dimen/_38sdp"
                                android:layout_height="@dimen/_38sdp"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_weight="0"

                                >
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@mipmap/behavioural_hr3"
                                    android:layout_gravity="right"
                                    />

                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Fields End -->


                    <!-- Fields Start -->

                    <LinearLayout
                        android:id="@+id/sl_tobacco"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_below="@id/sl_smoke"
                        android:layout_marginLeft="@dimen/size_10"
                        android:layout_marginTop="@dimen/size_20"
                        android:layout_marginRight="@dimen/size_10">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/size_25"
                            android:layout_marginBottom="@dimen/size_3"
                            android:orientation="horizontal"
                            >

                            <TextView
                                android:id="@+id/txttobacco"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="@dimen/size_20"
                                android:layout_gravity="center"
                                android:text="Do you chew tobacco?"

                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/size_10"
                            android:layout_marginRight="@dimen/size_10"
                            android:orientation="horizontal"
                            >
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_38sdp"
                                android:layout_weight="1"
                                >
                                <Spinner
                                    android:id="@+id/spinner_tobacco"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:entries="@array/foodHabit_arrays"
                                    android:paddingTop="@dimen/_8sdp"
                                    android:paddingLeft="@dimen/_5sdp"
                                    android:paddingBottom="@dimen/_8sdp"
                                    android:background="@mipmap/custom_dropdown"
                                    ></Spinner>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="@dimen/_38sdp"
                                android:layout_height="@dimen/_38sdp"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_weight="0"

                                >
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@mipmap/behavioural_hr4"
                                    android:layout_gravity="right"
                                    />

                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Fields End -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/sl_tobacco"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:background="@color/colorwhite"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        >

                        <Button
                            android:id="@+id/btnbehaviouralhrLogin"
                            android:layout_width="@dimen/_95sdp"
                            android:layout_height="@dimen/_45sdp"
                            android:background="@drawable/regsubmit" />
                    </LinearLayout>




                </LinearLayout> <!-- main LinearLayout ends here -->
       </ScrollView>

    </RelativeLayout>
        <android.support.design.widget.NavigationView
            android:id="@+id/bhr_navigation"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:menu="@menu/activity_main2_drawer"
            android:layout_gravity="start"
            app:headerLayout="@layout/navigation_header"
            >

        </android.support.design.widget.NavigationView>
    </android.support.v4.widget.DrawerLayout>
</layout>

