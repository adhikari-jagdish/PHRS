                                android:src="@mipmap/pp_img_religion"
                                android:layout_gravity="right"
                                android:scaleType="fitXY"
                                />

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <!-- Fields End -->


                <!-- Fields Start -->

                <LinearLayout
