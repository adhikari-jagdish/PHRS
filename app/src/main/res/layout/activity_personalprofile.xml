<?xml version="1.0" encoding="utf-8"?>
<layout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>
        <variable
            name="buttonHandler"
            type="com.vayamtech.healthe_cord.Handler.ButtonHandler">

        </variable>

    </data>

<android.support.v4.widget.DrawerLayout
    android:id="@+id/pp_drawerlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.vayamtech.healthe_cord.Activity.PersonalprofileActivity"
    >
        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorwhite"
        >

        <LinearLayout
            android:id="@+id/pp_header_img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150sdp"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:background="@color/colorAccent"

            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_pic"
                android:layout_width="@dimen/_120sdp"
                android:layout_marginLeft="@dimen/_30sdp"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:src="@drawable/prof"
                app:civ_border_width="4dp"
                app:civ_border_color="#FFFFFF"/>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_pp_camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/profile_pic"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:clickable="true"
                android:layout_gravity="bottom"
                app:fabSize="mini"
                android:src="@android:drawable/ic_menu_camera"
                />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/pp_header_img">

            <LinearLayout
                android:id="@+id/ll_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/pp_header_img"
                android:orientation="vertical"
                android:background="@color/colorwhite"
                >
                <LinearLayout
                    android:id="@+id/sl_height"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/size_10"
                    android:layout_marginTop="@dimen/size_20"
                    android:layout_marginRight="@dimen/size_10">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_25"
                        android:layout_marginBottom="@dimen/size_3"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:id="@+id/txtHeight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/size_20"
                            android:fontFamily="@font/robotoregular"
                            android:layout_gravity="center"
                            android:text="Height in cm"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_10"
                        android:layout_marginRight="@dimen/size_10"
                        android:orientation="horizontal"
                        >
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/rounded_reg_edittext"
                            >
                            <EditText
                                android:id="@+id/txtheight"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:textColor="@color/colorBlack"
                                android:inputType="number"
                                android:drawableRight="@drawable/icon_create"
                                android:paddingLeft="@dimen/_5sdp"
                                ></EditText>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="@dimen/_38sdp"
                            android:layout_height="@dimen/_38sdp"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_weight="0"

                            >
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/pp_img_height"
                                android:layout_gravity="right"
                                />

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/sl_weight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_below="@id/sl_height"
                    android:layout_marginLeft="@dimen/size_10"
                    android:layout_marginTop="@dimen/size_20"
                    android:layout_marginRight="@dimen/size_10">

                    <LinearLayout
